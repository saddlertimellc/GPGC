# Example environment configuration for the RS485 poller
# Replace the placeholders with values for your setup

# Firestore
FIRESTORE_PROJECT=your-project-id
FIRESTORE_COLLECTION=your-collection-name
# Path to your service account key JSON file
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Gateway Connections
#   Channel 1
      GW_4XCH1_HOST=192.168.1.201
      GW_4XCH1_PORT=1502
      GW_4XCH1_MODE=rtu
#   Channel 2
      GW_4XCH2_HOST=192.168.1.202
      GW_4XCH2_PORT=2502
#   Channel 3
      GW_4XCH3_HOST=192.168.1.203
      GW_4XCH3_PORT=3502
#   Channel 4
      GW_4XCH4_HOST=192.168.1.204
      GW_4XCH4_PORT=4502
#   Channel 5
      GW_1XCH1_HOST=192.168.1.254
      GW_1XCH1_PORT=502

# Devices
#   Device 1
      SENSOR2_DEVID=Greenhouse-1_Sensor-1
      SENSOR1_GATEWAY=4XCH1
      SENSOR1_UNITID=1
      SENSOR1_TYPE=SHT20
#   Device 2
      SENSOR2_DEVID=Greenhouse-2_Sensor-1
      SENSOR2_GATEWAY=4XCH2
      SENSOR2_UNITID=1
      SENSOR2_TYPE=SHT20
#   Device 3
      SENSOR3_DEVID=Greenhouse-3_Sensor-1
      SENSOR3_GATEWAY=4XCH3
      SENSOR3_UNITID=1
      SENSOR3_TYPE=SHT20
#   Device 4
      SENSOR4_DEVID=Greenhouse-4_Sensor-1
      SENSOR4_GATEWAY=4XCH4
      SENSOR4_UNITID=1
      SENSOR4_TYPE=SHT20
#   Device 5
      SENSOR5_DEVID=Greenhouse-5_Sensor-1
      SENSOR5_GATEWAY=1XCH1
      SENSOR5_UNITID=1
      SENSOR5_TYPE=SHT30


